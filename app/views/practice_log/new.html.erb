<% provide(:title, "練習ログ作成 | UTAMEMO") %>

<div class="flex flex-col justify-center items-center pt-10">
  <h2 class="text-3xl font-bold text-white text-center mb-6">練習ログを記録する</h2>

  <%= form_with model: @practice_log, local: true, class: "flex flex-col items-center w-full max-w-md space-y-4" do |f| %>

    <!-- 練習した曲 -->
    <div class="w-full">
      <%= f.label :song, "練習した曲", class: "block text-white mb-1" %>
      <%= f.text_field :song, placeholder: "曲名を入力", class: "w-full text-lg p-3 rounded-lg border-2 border-purple-500 bg-gray-300 text-purple-700 placeholder-purple-500 focus:outline-none focus:ring-2 focus:ring-purple-500" %>
    </div>

    <!-- 今日の練習メモ -->
    <div class="w-full">
      <%= f.label :placeholder_memo, "今日の練習メモ", class: "block text-white mb-1" %>
      <%= f.text_area :placeholder_memo, placeholder: "どんな練習をしたか書いてみましょう", rows: 4, class: "w-full text-lg p-3 rounded-lg border-2 border-purple-500 bg-gray-300 text-purple-700 placeholder-purple-500 focus:outline-none focus:ring-2 focus:ring-purple-500" %>
    </div>

    <!-- 練習時間 -->
    <div class="w-full">
      <%= f.label :practice_amount, "練習時間（分）", class: "block text-white mb-1" %>
      <%= f.number_field :practice_amount, min: 0, placeholder: "例: 30", class: "w-full text-lg p-3 rounded-lg border-2 border-purple-500 bg-gray-300 text-purple-700 placeholder-purple-500 focus:outline-none focus:ring-2 focus:ring-purple-500" %>
    </div>

    <!-- 気分 -->
    <div class="w-full">
      <%= f.label :mood, "今日の気分", class: "block text-white mb-1" %>
      <%= f.select :mood, [["よかった", 1], ["ふつう", 2], ["いまいちだった", 3]], {}, class: "w-full text-lg p-3 rounded-lg border-2 border-purple-500 bg-gray-300 text-purple-700 focus:outline-none focus:ring-2 focus:ring-purple-500" %>
    </div>

    <!-- 振り返りコメント -->
    <div class="w-full">
      <%= f.label :comment, "振り返りコメント", class: "block text-white mb-1" %>
      <%= f.text_area :comment, placeholder: "気づいたこと・反省などを自由に書いてみてください", rows: 4, class: "w-full text-lg p-3 rounded-lg border-2 border-purple-500 bg-gray-300 text-purple-700 placeholder-purple-500 focus:outline-none focus:ring-2 focus:ring-purple-500" %>
    </div>

    <!-- 送信ボタン -->
    <div class="w-full">
      <%= f.submit "保存する", class: "w-full bg-purple-500 text-white text-lg font-bold py-3 rounded-lg hover:bg-purple-600 transition" %>
    </div>

  <% end %>
</div>
