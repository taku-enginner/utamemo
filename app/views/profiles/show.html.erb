<% provide(:title, "マイページ | UTAMEMO")%>
<div class="flex flex-col">
  <!-- プロフィール -->
  <div class="border border-white mb-5 text-white">
    <div class="p-4 mb-2 text-3xl font-bold tracking-wide text-center">プロフィール</div>
    <!-- プロフィール画像とニックネーム -->
    <div class="flex flex-col items-center justify-center">
      <%= link_to "編集", edit_user_profile_path, class: "btn" %>
      <div class="flex flex-col items-center justify-center">
        <div>ニックネーム</div>
        <div><%= current_user.nickname %></div>
        <% if @profile.image.attached? %>
          <%= image_tag(@profile.image) %>
        <% end %>
      </div>
    </div>
  </div>

  <!-- マイメモ一覧-->
  <div class="border border-white m-5">
    <div class="p-4 mb-2 text-3xl text-white font-bold tracking-wide text-center">マイメモ一覧</div>
    <div class="p-4 text-center flex flex-col items-center space-y-4">
      <% @my_memos.each do |my_memo| %>
        <div class="flex flex-row w-full items-center space-x-2">
          <div class="w-full">
            <%= button_to memo_path(my_memo.id), { method: :get, class: "list block w-full bg-base-100 rounded-box shadow-md p-4 my-2" } do %>    
                <div class="flex flex-row items-center">
                  <div>
                    <img class="size-10 rounded-box" src="/アイコン_デフォルト.png"/>
                  </div>
                  <div class="w-full">
                    <div><%= my_memo.user.nickname %></div>
                    <div class="text-xs uppercase font-semibold opacity-60"><%= my_memo[:song_title] %> : <%= my_memo[:artist_name] %></div>
                  </div>
                </div>
            <% end %>
          </div>
          <div>
            <%= button_to memo_path(my_memo.id),
              method: :delete,
              data: { confirm: "本当に削除しますか？", method: "delete" , turbo: false},
              class: "w-10 h-10 bg-red-700 text-white rounded-full flex items-center justify-center shadow-md inline-block" do %>
              <i class="fas fa-trash text-2xl p-3"></i>
            <% end %>
          </div>

        
        </div>           
      <% end %>
    </div>
  </div>
</div>
