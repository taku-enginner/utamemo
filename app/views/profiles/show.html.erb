<% provide(:title, "マイページ | UTAMEMO")%>

<div class="flex justify-center items-start min-h-[calc(100vh-80px)] px-4 py-8">
  <div class="w-full max-w-2xl bg-slate-950 border-2 border-pink-600 rounded-3xl p-8 text-white shadow-lg">

    <!-- タイトル -->
    <h1 class="text-3xl font-bold text-center mb-8 text-pink-400">マイページ</h1>

    <!-- プロフィール画像とニックネーム -->
    <div class="flex flex-col md:flex-row items-center justify-center gap-6 mb-8">
      <% if @profile.image.attached? %>
        <%= image_tag @profile.image, class: "rounded-full w-24 h-24 md:w-40 md:h-40 object-cover shadow" %>
      <% else %>
        <%= image_tag "アイコン_デフォルト.png", class: "rounded-full w-24 h-24 md:w-40 md:h-40 object-cover shadow" %>
      <% end %>

      <div class="text-center md:text-left">
        <p class="text-lg md:text-xl text-gray-400">ニックネーム</p>
        <p class="text-2xl font-semibold"><%= current_user.nickname %></p>
      </div>
    </div>

    <!-- ナビゲーションボタン -->
    <div class="flex flex-col items-center gap-4 max-w">
      <%= link_to "プロフィールを編集", edit_user_profile_path, class: "bg-pink-500 hover:bg-pink-600 text-white font-bold py-2 px-6 rounded shadow w-[100%] md:w-[40%] text-center" %>
      <%= link_to "マイメモ一覧", my_memos_user_profile_path(@profile.user_id), class: "bg-pink-500 hover:bg-pink-600 text-white font-bold py-2 px-6 rounded shadow  w-[100%] md:w-[40%] text-center" %>
      <%= link_to "練習記録", user_practice_logs_path(@profile.user_id), class: "bg-pink-500 hover:bg-pink-600 text-white font-bold py-2 px-6 rounded shadow  w-[100%] md:w-[40%] text-center" %>
    </div>

  </div>
</div>
