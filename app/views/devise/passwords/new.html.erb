<% provide(:title, "パスワードリセット | UTAMEMO") %>
<div class="flex flex-col justify-center items-center pt-5">
  <h2 class="text-3xl font-bold text-white text-center mb-6">パスワードリセット</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, class: "flex flex-col items-center") do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <div class="mb-4 w-80">
        <%= f.label :email, "ご登録のメールアドレス", class: "text-white" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", required: true,
            class: "w-full text-lg p-3 rounded-lg border-2 border-purple-500 bg-gray-300 text-purple-600 placeholder-purple-500 focus:outline-none focus:ring-2 focus:ring-purple-500" %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "再設定用メールを送信する", class: "w-full bg-purple-500 text-white text-lg font-bold py-3 rounded-lg hover:bg-purple-600 transition"  %>
    </div>
  <% end %>

</div>
