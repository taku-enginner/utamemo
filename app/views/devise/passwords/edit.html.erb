<% provide(:title, "パスワードリセット | UTAMEMO") %>
<div class="flex flex-col justify-center items-center pt-5">
  <h2 class="text-3xl font-bold text-white text-center mb-6">パスワードリセット</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, class: "flex flex-col items-center") do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field">
      <% if @minimum_password_length %>
        <p class="text-sm text-white mb-2">※パスワードは <%= @minimum_password_length %> 文字以上で入力してください</p>
      <% end %>

      <div class="mb-4 w-80">
        <%= f.label :password, "新しいパスワード", class: "text-white font-semibold" %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "w-full text-lg p-3 rounded-lg border-2 border-purple-500 bg-gray-300 text-purple-600 placeholder-purple-500 focus:outline-none focus:ring-2 focus:ring-purple-500" %>
      </div>

      <div class="mb-4 w-80">
        <%= f.label :password_confirmation, "パスワード（確認用）", class: "text-white font-semibold" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full text-lg p-3 rounded-lg border-2 border-purple-500 bg-gray-300 text-purple-600 placeholder-purple-500 focus:outline-none focus:ring-2 focus:ring-purple-500" %>
      </div>
    </div>

    <div class="actions w-80">
      <%= f.submit "パスワードを変更する", class: "w-full bg-purple-500 text-white text-lg font-bold py-3 rounded-lg hover:bg-purple-600 transition" %>
    </div>
  <% end %>
</div>
