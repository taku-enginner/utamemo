<% provide(:title, "新規会員登録 | UTAMEMO")%>

<div class="flex flex-col justify-center items-center pt-5">
  <h2 class="text-3xl font-bold text-white text-center mb-6">新規会員登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "flex flex-col items-center") do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-4 w-80">
      <%= f.text_field :nickname, autofocus: true, placeholder: "ニックネーム", required: true,
          class: "w-full text-lg p-3 rounded-lg border-2 border-purple-500 bg-gray-300 text-purple-600 placeholder-purple-500 focus:outline-none focus:ring-2 focus:ring-purple-500" %>
    </div>

    <div class="mb-4 w-80">
      <%= f.email_field :email, autocomplete: "email", placeholder: "メールアドレス", required: true,
          class: "w-full text-lg p-3 rounded-lg border-2 border-purple-500 bg-gray-300 text-purple-600 placeholder-purple-500 focus:outline-none focus:ring-2 focus:ring-purple-500" %>
    </div>

    <div class="mb-4 w-80">
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード", required: true,
          class: "w-full text-lg p-3 rounded-lg border-2 border-purple-500 bg-gray-300 text-purple-600 placeholder-purple-500 focus:outline-none focus:ring-2 focus:ring-purple-500" %>
    </div>

    <div class="mb-4 w-80">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード確認", required: true,
          class: "w-full text-lg p-3 rounded-lg border-2 border-purple-500 bg-gray-300 text-purple-600 placeholder-purple-500 focus:outline-none focus:ring-2 focus:ring-purple-500" %>
    </div>

    <div class="w-80">
      <%= f.submit "新規登録", class: "w-full bg-purple-500 text-white text-lg font-bold py-3 rounded-lg hover:bg-purple-600 transition" %>
    </div>
  <% end %>

  <%= link_to "登録済みの方はこちら", new_user_session_path, class: "mt-4 text-white text-center" %>
</div>
