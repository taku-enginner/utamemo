<% provide(:title, "ログイン | UTAMEMO") %>

<div class="flex flex-col justify-center items-center pt-5">
  <h2 class="text-3xl font-bold text-white text-center mb-6">ようこそ、UTAMEMOへ</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "flex flex-col items-center", html: { data: { turbo: false } }) do |f| %>
    <div class="mb-4 w-80">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", required: true,
          class: "w-full text-lg p-3 rounded-lg border-2 border-purple-500 bg-gray-300 text-purple-600 placeholder-purple-500 focus:outline-none focus:ring-2 focus:ring-purple-500" %>
    </div>

    <div class="mb-4 w-80">
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", required: true,
          class: "w-full text-lg p-3 rounded-lg border-2 border-purple-500 bg-gray-300 text-purple-600 placeholder-purple-500 focus:outline-none focus:ring-2 focus:ring-purple-500" %>
    </div>

    <div class="w-80">
      <%= f.submit "ログインする", class: "w-full bg-purple-500 text-white text-lg font-bold py-3 rounded-lg hover:bg-purple-600 transition" %>
    </div>
  <% end %>

  <div class="mt-6">
    <%= link_to image_tag("ios_dark_sq_SI@1x.png", alt: "Googleでログイン"), user_google_oauth2_omniauth_authorize_path, class: "p-4 inline-block" %>
  </div>

  <div class="flex flex-col items-center mt-6 space-y-2">
    <%= link_to "パスワードをお忘れの方はこちら", new_user_password_path, class: "text-white underline" %>
    <%= link_to "アカウントをお持ちでない方はこちらから新規登録！", new_user_registration_path, class: "text-white underline" %>
  </div>
</div>
